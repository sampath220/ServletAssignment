<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>Storage</servlet-name>
    <servlet-class>com.sampath.Storage</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Storage</servlet-name>
    <url-pattern>/storage</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Search</servlet-name>
    <servlet-class>com.sampath.Search</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Search</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Sorting</servlet-name>
    <servlet-class>com.sampath.Sorting</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Sorting</servlet-name>
    <url-pattern>/sorting</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>f1</filter-name>
    <filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
    <init-param>
      <param-name>cors.allowed.origins</param-name>
      <param-value>*</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>f1</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>search</filter-name>
    <filter-class>com.sampath.SearchFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>search</filter-name>
    <url-pattern>/search</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>Add</filter-name>
    <filter-class>com.sampath.AddFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Add</filter-name>
    <url-pattern>/storage</url-pattern>
  </filter-mapping>
</web-app>